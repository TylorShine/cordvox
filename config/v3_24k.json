{
    "preprocess": {
        "length": 24000,
        "pitch_estimation": "fcpe",
        "sample_rate": 24000,
        "n_fft": 1920,
        "frame_size": 480,
        "n_mels": 80
    },
    "trainer": {
        "devices": "auto",
        "max_epochs": 10000,
        "precision": "bf16-mixed",
        "log_every_n_steps": 50
    },
    "data_module": {
        "cache_dir": "dataset_cache",
        "batch_size": 4,
        "num_workers": 1
    },
    "save": {
        "interval": 400,
        "models_dir": "models"
    },
    "model": {
        "generator": {
            "n_mels": 80,
            "sample_rate": 24000,
            "frame_size": 480,
            "upsample_initial_channels": 256,
            "resblock_type": "2",
            "resblock_kernel_sizes": [3, 5, 7],
            "resblock_dilations": [[1, 2], [2, 6], [3, 12]],
            "upsample_kernel_sizes": [24, 20, 8],
            "upsample_rates": [12, 10, 4]
        },
        "discriminator": {
            "msd": {
                "scales": [1, 2, 3],
                "channels": 32,
                "num_layers": 4
            }
        }
    }
}